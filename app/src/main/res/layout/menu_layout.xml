<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Selection"
        android:id="@+id/menu_btn_reset"
        android:background="@xml/menu_button_selector"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export my data"
        android:id="@+id/menu_btn_export"
        android:background="@xml/menu_button_selector"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data filter"
        android:id="@+id/menu_btn_filter"
        android:background="@xml/menu_button_selector"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:id="@+id/menu_btn_logout"
        android:background="@xml/menu_button_selector"/>
</LinearLayout>