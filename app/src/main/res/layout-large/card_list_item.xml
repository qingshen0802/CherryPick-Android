<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/list_item"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:layout_height="140dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/offer_title"
            android:layout_width="wrap_content"
            tools:text="iPhone"
            android:textStyle="bold"
            android:textColor="@color/cherry_red"
            android:textSize="12pt"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:scaleType="centerInside"
            android:maxHeight="40dp"
            android:src="@drawable/networks_o2"
            android:layout_gravity="top|left"
            android:contentDescription="network"
            android:id="@+id/imageView3" />

        <TextView
            android:id="@+id/offer_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="minutes"
            android:layout_marginRight="10dp"
            android:layout_below="@id/offer_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingBottom="5dp"/>
        <TextView
            android:id="@+id/offer_data"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/offer_minutes"
            android:layout_below="@id/offer_title"
            android:layout_height="wrap_content"
            android:text="data"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingBottom="5dp"/>
        <TextView
            android:id="@+id/offer_price"
            android:layout_below="@id/offer_minutes"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="£40 per month\n£50 upfront cost"/>

    </RelativeLayout>

    <ImageView
        android:id="@id/contract"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="0"
        android:background="@drawable/drag" />


</LinearLayout>
